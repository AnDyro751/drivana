<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Extender Reservación</h1>
    <div class="space-x-2">
      <%= link_to "Volver", dashboard_booking_path(@booking), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors duration-200" %>
    </div>
  </div>

  <!-- Información de la reservación actual -->
  <div class="bg-gray-50 rounded-lg p-6 mb-8">
    <h2 class="text-lg font-semibold mb-4">Detalles de la Reservación Actual</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="text-gray-600 mb-1">Vehículo</p>
        <p class="font-medium"><%= "#{@booking.car.brand} #{@booking.car.model} (#{@booking.car.year})" %></p>
      </div>
      <div>
        <p class="text-gray-600 mb-1">Tarifa Diaria</p>
        <p class="font-medium"><%= @booking.car.daily_rate.format(symbol: true) %></p>
      </div>
      <div>
        <p class="text-gray-600 mb-1">Período Actual</p>
        <p class="font-medium">
          <%= l @booking.start_date, format: :short %> - <%= l @booking.end_date, format: :short %>
        </p>
      </div>
      <div>
        <p class="text-gray-600 mb-1">Estado</p>
        <span class="<%= @booking.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %> px-2 py-1 text-xs font-medium rounded-full">
          <%= @booking.status %>
        </span>
      </div>
    </div>
  </div>

  <!-- Mensaje informativo -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-8">
    <div class="flex">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div>
        <h3 class="font-bold text-blue-800">Información Importante</h3>
        <p class="text-blue-700">La extensión comenzará a partir de la fecha de fin actual de tu reservación. 
           Se generará un ticket adicional por el período extendido.</p>
      </div>
    </div>
  </div>

  <!-- Formulario de extensión -->
  <div class="bg-white rounded-lg">
    <h2 class="text-xl font-semibold mb-6">Detalles de la Extensión</h2>
    <%= render 'extension_form' %>
  </div>
</div> 