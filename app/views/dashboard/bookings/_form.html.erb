<%= form_with(model: [:dashboard, booking], 
    class: "space-y-6",
    id: "booking_form") do |f| %>
  
  <% if booking.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4">
      <ul class="list-disc list-inside">
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :car_id %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <%= f.label :start_date, "Fecha de Inicio", class: "block font-medium text-gray-700" %>
      <%= f.date_field :start_date, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
          min: Time.current %>
    </div>

    <div class="space-y-2">
      <%= f.label :end_date, "Fecha de Fin", class: "block font-medium text-gray-700" %>
      <%= f.date_field :end_date, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
          min: Time.current %>
    </div>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancelar", dashboard_bookings_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors duration-200" %>
    <%= f.submit "Crear ReservaciÃ³n", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-200" %>
  </div>
<% end %> 