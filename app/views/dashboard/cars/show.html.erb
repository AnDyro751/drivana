<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Detalles del Vehículo</h1>
    <div class="space-x-2">
      <%= link_to "Regresar", dashboard_cars_path, class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors duration-200" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <div>
        <h3 class="font-medium text-gray-500">Marca</h3>
        <p class="text-lg"><%= @car.brand %></p>
      </div>

      <div>
        <h3 class="font-medium text-gray-500">Modelo</h3>
        <p class="text-lg"><%= @car.model %></p>
      </div>

      <div>
        <h3 class="font-medium text-gray-500">Año</h3>
        <p class="text-lg"><%= @car.year %></p>
      </div>

      <div>
        <h3 class="font-medium text-gray-500">Tarifa Diaria</h3>
        <p class="text-lg">
          <%= @car.daily_rate.format(symbol: true) %>
        </p>
      </div>

      <div>
        <h3 class="font-medium text-gray-500">Estado</h3>
        <span class="<%= @car.status_available? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %> px-2 py-1 text-xs font-medium rounded-full">
          <%= @car.status %>
        </span>
      </div>
    </div>
  </div>
</div> 