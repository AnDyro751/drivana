<div class="min-h-screen bg-gradient-to-b from-violet-100 to-white flex flex-col items-center justify-center p-4">
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <%= link_to root_path, class: "text-2xl font-bold text-indigo-600" do %>
        Drivana
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Recuperar Contraseña</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
            <%= I18n.t("errors.messages.not_saved",
              count: resource.errors.count,
              resource: resource.class.model_name.human.downcase) %>
          </div>
        <% end %>

        <div class="space-y-6">
          <div class="space-y-2">
            <%= f.label :email, "Correo electrónico", class: "block font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", 
                placeholder: "tu@email.com" %>
          </div>

          <%= f.submit "Enviar instrucciones", class: "w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
        <%= link_to "Regresar a inicio de sesión", new_session_path(resource_name), 
            class: "text-indigo-600 hover:text-indigo-800" %>
      </div>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "Regresar al inicio", root_path, 
          class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>
</div>
