<% if notice.present? %>
  <div class="fixed top-4 right-4 z-50 animate-fade-in-down">
    <div class="bg-green-50 text-green-800 px-4 py-3 rounded-lg shadow-lg border border-green-200 flex items-center">
      <span><%= notice %></span>
    </div>
  </div>
<% end %>

<% if alert.present? %>
  <div class="fixed top-4 right-4 z-50 animate-fade-in-down">
    <div class="bg-red-50 text-red-800 px-4 py-3 rounded-lg shadow-lg border border-red-200 flex items-center">
      <span><%= alert %></span>
    </div>
  </div>
<% end %> 